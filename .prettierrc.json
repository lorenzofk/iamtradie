{
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "printWidth": 120,
    "quoteProps": "as-needed",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "endOfLine": "auto",
    "overrides": [
        {
            "files": "resources/js/**",
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.vue",
            "options": {
                "htmlWhitespaceSensitivity": "ignore"
            }
        }
    ]
}
